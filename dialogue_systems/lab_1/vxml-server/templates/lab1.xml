<?xml version="1.0" encoding="utf-8"?>

<vxml version="2.1" xmlns="http://www.w3.org/2001/vxml"
      xmlns:voxeo="http://community.voxeo.com/xmlns/vxml">

  <nomatch>
    I didn't understand, try talking with an American accent.
    <reprompt/>
  </nomatch>
  
  <noinput>
    Speak up drongo!
    <reprompt/>
  </noinput>

  <!-- Data model -->
  <var name="from" />
  <var name="to" />
  <var name="when"/>
  <var name="isRetrun"/>
  <var name="correct"/>
  <var name="returnDay"/>


  <!-- State machine -->
  <form id="welcome">
    <block>
      
      <prompt>
	<audio src="https://instaud.io/_/3hLZ.wav"/>
	<break time="2000" />
	
	Welcome to The Altered Beast flight booking service.

      </prompt>
      <goto next="#mainMenu"/>
    </block>
  </form>

<menu id="mainMenu">
  <prompt>
    Welcome to the main menu, please choose from; flight booking service, delayed flights, or life advice.
  </prompt>
  <choice next="flight_booking.xml">
    Flight booking service
  </choice>
  <choice next="delayed_flights.xml">
    delayed flights
  </choice>
  <choice next="life_advice.xml">
    life advice
  </choice>
  
</menu>

</vxml>
